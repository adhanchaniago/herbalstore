{% if content %}
	<article {{ attributes.addClass(['row', 'mt-5', 'article-image']) }}>
    {% if content.text %}
      <div {{ region_attributes.text.addClass(['col-md-8']) }}>
        {{ content.text }}
      </div>
    {% endif %}
    {% if content.image %}
      <div {{ region_attributes.image.addClass(['col-md-4', 'pl-4', 'd-none', 'd-md-block']) }}>
        {{ content.image }}
      </div>
    {% endif %}
	</article>
{% endif %}
